<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.curation.model.dao.CommentDao">

	<insert id="createComment" parameterType="commentDto">
		INSERT INTO comment(comment_url, comment_content, id, comment_date)
		VALUES(#{commentUrl}, #{commentContent}, #{id}, now())
	</insert>
	
	<delete id="deleteComment" parameterType="int">
		DELETE FROM comment
		WHERE comment_id = #{commentId}
	</delete>

</mapper>

